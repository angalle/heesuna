<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">

        <!-- actionbar color -->
        <item name="colorPrimary">@color/GreenYellow</item>
        <!-- colorPrimaryDark is used for the status bar (with the
         battery, clock, etc). -->
        <item name="colorPrimaryDark">@color/Black</item>
    	<!-- actionbarTab Color -->
    	<item name="colorAccent">@color/Black</item>
    	<!-- the color of the title text in the Toolbar change.  -->
    	<item name="android:textColorPrimary">@color/Black</item>
   		<item name="actionBarSize">80dp</item>
   		<item name="actionBarStyle">@style/ActionBarTheme</item>
    </style>
    
    <style name="ActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/Red</item>
	</style>
	
</resources>